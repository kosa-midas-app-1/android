<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="이름"
        android:id="@+id/te_name"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="35dp"
        android:layout_marginStart="50dp"
        />
    <EditText
        android:layout_width="match_parent"
        android:layout_marginHorizontal="50dp"
        android:layout_height="wrap_content"
        android:id="@+id/in_name"
        app:layout_constraintStart_toStartOf="@+id/te_name"
        app:layout_constraintTop_toTopOf="@+id/te_name"
        android:layout_marginTop="30dp"
        android:hint="   이름을 입력해주세요."
        android:background="@drawable/textbox"
        />
    <TextView
        android:id="@+id/te_email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="E-mail"
        app:layout_constraintTop_toTopOf="@id/in_name"
        app:layout_constraintStart_toStartOf="@id/te_name"
        android:layout_marginTop="65dp"
        />

    <EditText
        android:id="@+id/in_email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textEmailAddress"
        android:layout_marginHorizontal="50dp"
        app:layout_constraintTop_toTopOf="@id/te_email"
        app:layout_constraintStart_toStartOf="@id/te_email"
        android:layout_marginTop="30dp"
        android:hint="   E-mail을 입력해주세요."
        android:background="@drawable/textbox"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/te_pw"
        android:text="비밀번호"
        app:layout_constraintTop_toTopOf="@id/in_email"
        app:layout_constraintStart_toStartOf="@id/te_email"
        android:layout_marginTop="65dp"
        />

    <EditText
        android:layout_width="match_parent"
        android:layout_marginHorizontal="50dp"
        android:layout_height="wrap_content"
        android:id="@+id/in_pw"
        android:ems="15"
        android:inputType="textPassword"
        android:hint="   비밀번호를 입력해주세요."
        app:layout_constraintTop_toTopOf="@id/te_pw"
        app:layout_constraintStart_toStartOf="@id/te_pw"
        android:layout_marginTop="30dp"
        android:background="@drawable/textbox"
        />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/in_repw"
        android:layout_marginHorizontal="50dp"
        android:inputType="textPassword"
        android:hint="   비밀번호를 한번 더 입력해주세요."
        app:layout_constraintTop_toTopOf="@id/in_pw"
        android:layout_marginTop="50dp"
        android:background="@drawable/textbox"
        />
    <TextView
        android:id="@+id/te_ph"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="전화번호"
        app:layout_constraintTop_toTopOf="@id/in_repw"
        app:layout_constraintStart_toStartOf="@id/in_repw"
        android:layout_marginTop="65dp"
        />
    <EditText
        android:id="@+id/in_ph"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="50dp"
        android:inputType="text"
        android:hint="   전화번호를 입력해주세요."
        app:layout_constraintTop_toTopOf="@id/te_ph"
        app:layout_constraintStart_toStartOf="@id/te_ph"
        android:layout_marginTop="30dp"
        android:background="@drawable/textbox"
        />
    <androidx.appcompat.widget.AppCompatButton
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="17sp"
        android:paddingVertical="15dp"
        android:layout_marginBottom="35dp"
        android:layout_marginHorizontal="50dp"
        android:text="다음"
        android:background="@drawable/bg_btn"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginTop="270dp"
        android:id="@+id/bu_next"
        />

</androidx.constraintlayout.widget.ConstraintLayout>