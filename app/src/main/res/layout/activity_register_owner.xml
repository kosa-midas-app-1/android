<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="55dp"
        android:text="이름"
        android:id="@+id/te_manger_name"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="35dp"
        />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="55dp"
        android:id="@+id/in_Manager_name"
        android:layout_marginTop="35dp"
        android:inputType="text"
        app:layout_constraintTop_toTopOf="@id/te_manger_name"
        app:layout_constraintStart_toStartOf="@id/te_manger_name"
        android:background="@drawable/textbox"
        android:hint="   이름을 입력해 주세요."/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="55dp"
        android:text="이메일"
        android:id="@+id/te_Manager_email"
        app:layout_constraintTop_toTopOf="@id/in_Manager_name"
        app:layout_constraintStart_toStartOf="@id/in_Manager_name"
        android:layout_marginTop="60dp"
        />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="55dp"
        android:id="@+id/in_Manager_email"
        android:hint="   E-mail을 입력해주세요."
        android:inputType="textEmailAddress"
        app:layout_constraintTop_toTopOf="@id/te_Manager_email"
        app:layout_constraintStart_toStartOf="@id/te_Manager_email"
        android:layout_marginTop="20dp"
        android:background="@drawable/textbox"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="55dp"
        android:id="@+id/te_Manager_pw"
        android:text="비밀번호"
        app:layout_constraintStart_toStartOf="@id/in_Manager_email"
        app:layout_constraintTop_toTopOf="@id/in_Manager_email"
        android:layout_marginTop="100dp"
        />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="55dp"
        android:id="@+id/in_Manager_pw"
        android:hint="   비밀번호를 입력해주세요."
        android:background="@drawable/textbox"
        android:inputType="textPassword"
        app:layout_constraintTop_toTopOf="@id/te_Manager_pw"
        app:layout_constraintStart_toStartOf="@id/te_Manager_pw"
        android:layout_marginTop="35dp"
        />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="55dp"
        android:id="@+id/in_Manager_repw"
        android:hint="   비밀번호를 한번 더 입력해주세요."
        android:inputType="textPassword"
        app:layout_constraintTop_toTopOf="@id/in_Manager_pw"
        app:layout_constraintStart_toStartOf="@id/in_Manager_pw"
        android:layout_marginTop="50dp"
        android:background="@drawable/textbox"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="55dp"
        android:id="@+id/te_Manager_ph"
        android:text="전화번호"
        app:layout_constraintStart_toStartOf="@id/in_Manager_repw"
        app:layout_constraintTop_toTopOf="@id/in_Manager_repw"
        android:layout_marginTop="150dp"
        />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="55dp"
        android:id="@+id/in_Manager_ph"
        android:hint="   전화번호를 입력해주세요."
        app:layout_constraintTop_toTopOf="@id/te_Manager_ph"
        app:layout_constraintStart_toStartOf="@id/te_Manager_ph"
        android:layout_marginTop="35dp"
        android:background="@drawable/textbox"
        />
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/nextBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="55dp"
        android:text="다음"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="20dp"
/>
</androidx.constraintlayout.widget.ConstraintLayout>