<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="55dp"
        android:id="@+id/te_manager_cp"
        android:text="회사명"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="35dp"
        />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="55dp"
        android:id="@+id/in_manager_cp"
        android:inputType="text"
        android:hint="   회사명을 입력해주세요."
        app:layout_constraintTop_toTopOf="@+id/te_manager_cp"
        app:layout_constraintStart_toStartOf="@id/te_manager_cp"
        android:layout_marginTop="30dp"
        android:background="@drawable/textbox"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="55dp"
        android:id="@+id/te_manager_epnum"
        android:text="회사 사업자 번호"
        app:layout_constraintTop_toTopOf="@id/in_manager_cp"
        app:layout_constraintStart_toStartOf="@id/in_manager_cp"
        android:layout_marginTop="60dp"
        />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="55dp"
        android:id="@+id/in_manager_epnum"
        android:inputType="text"
        android:hint="   회사 사업자 번호를 입력해주세요."
        app:layout_constraintTop_toTopOf="@+id/te_manager_epnum"
        app:layout_constraintStart_toStartOf="@id/te_manager_epnum"
        android:layout_marginTop="30dp"
        android:background="@drawable/textbox"
        />
    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_marginHorizontal="15dp"
        android:id="@+id/blackline"
        android:background="@color/black"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="400dp"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="55dp"
        android:id="@+id/te_wh"
        android:text="재택근무 허용 여부"
        app:layout_constraintTop_toTopOf="@+id/blackline"
        app:layout_constraintStart_toStartOf="@+id/blackline"
        android:layout_marginTop="20dp"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="55dp"
        android:id="@+id/th_wh2"
        android:text="허용/거부"
        app:layout_constraintTop_toTopOf="@+id/te_wh"
        app:layout_constraintStart_toStartOf="@+id/te_wh"
        android:layout_marginTop="20dp"
        android:layout_marginStart="25dp"
        />

    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="-16dp">

        <RadioButton
            android:id="@+id/radio_bt1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="77dp"
            android:layout_marginTop="380dp" />

        <RadioButton
            android:id="@+id/rdio_bt2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="110dp"
            android:layout_marginTop="-48.5dp" />
    </RadioGroup>
<RadioGroup
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RadioButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="340dp"
        android:layout_marginStart="210dp"
        android:text="선택적 근로시간제"/>
    <RadioButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="210dp"
        android:layout_marginTop="-10dp"
        android:text="시차출퇴근제"/>
</RadioGroup>
    <androidx.appcompat.widget.AppCompatButton
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="55dp"
        android:text="왼료"
        android:id="@+id/finishBtn"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="20dp"
        />
</androidx.constraintlayout.widget.ConstraintLayout>