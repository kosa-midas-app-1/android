<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:id="@+id/appBar">
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            app:layout_constraintBottom_toBottomOf="parent"
            android:background="@color/black"
            android:layout_marginHorizontal="15dp"/>
        <ImageView
            android:id="@+id/profileBtn"
            android:layout_width="40dp"
            android:layout_height="40dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:background="@drawable/ic_profile"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="20dp"/>
        <ImageView
            android:layout_width="36dp"
            android:layout_height="28dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:background="@drawable/ic_notification"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="20dp"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <TextView
        android:id="@+id/rejectTxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/appBar"
        android:textColor="@color/black"
        android:textSize="50sp"
        android:text="요청 거절됨"/>
    <TextView
        android:id="@+id/requestTxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="다시 요청하세요"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/rejectTxt"
        android:textSize="25sp"
        android:textColor="@color/black"
        android:layout_marginTop="7dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/te_cp"
        android:text="회사"
        app:layout_constraintTop_toBottomOf="@id/requestTxt"
        android:layout_marginTop="30dp"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="50dp"
        />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="text"
        android:id="@+id/in_cp"
        android:hint="   회사명을 입력해주세요."
        android:layout_marginHorizontal="50dp"
        app:layout_constraintTop_toTopOf="@id/te_cp"
        app:layout_constraintStart_toStartOf="@id/te_cp"
        android:layout_marginTop="30dp"
        android:background="@drawable/textbox"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/te_ps"
        android:text="직급"
        app:layout_constraintTop_toTopOf="@id/in_cp"
        android:layout_marginTop="80dp"
        app:layout_constraintStart_toStartOf="@id/te_cp"

        />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="text"
        android:id="@+id/in_ps"
        android:layout_marginHorizontal="50dp"
        android:hint="   직급을 입력해주세요."
        app:layout_constraintTop_toTopOf="@id/te_ps"
        app:layout_constraintStart_toStartOf="@id/te_ps"
        android:layout_marginTop="40dp"
        android:background="@drawable/textbox"
        />
    <androidx.appcompat.widget.AppCompatButton
        android:layout_width="match_parent"
        android:layout_marginHorizontal="50dp"
        android:layout_height="wrap_content"
        android:text="완료"
        android:textSize="17sp"
        android:paddingVertical="15dp"
        android:background="@drawable/bg_btn"
        android:id="@+id/bu_com"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="35dp"
        />

</androidx.constraintlayout.widget.ConstraintLayout>