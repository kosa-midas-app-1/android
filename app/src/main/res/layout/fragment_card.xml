<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:visibility="invisible"
    android:id="@+id/cardLayout">

    <View
        android:id="@+id/rectangle_1"
        android:layout_width="334dp"
        android:layout_height="580dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/rectangle_1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/companyimage"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_marginEnd="150dp"
        android:layout_marginBottom="420dp"
        android:src="@drawable/ic_company_image"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/companyname"
        android:layout_width="150dp"
        android:layout_height="100dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="10dp"
        android:text="마이다스아이티"
        android:textColor="#000"
        android:textSize="35sp"
        app:layout_constraintBottom_toBottomOf="@+id/companyimage"
        app:layout_constraintStart_toEndOf="@+id/companyimage"
        app:layout_constraintTop_toTopOf="@+id/companyimage" />

    <TextView
        android:id="@+id/name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="홍길동"
        android:textColor="#000"
        android:textSize="30sp"
        app:layout_constraintEnd_toStartOf="@+id/companyname"
        app:layout_constraintStart_toStartOf="@+id/rectangle_1"
        app:layout_constraintTop_toBottomOf="@+id/companyimage" />

    <TextView
        android:id="@+id/rank"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="대표이사"
        android:textSize="20sp"
        android:textColor="#000"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10sp"
        app:layout_constraintStart_toEndOf="@+id/name"
        app:layout_constraintTop_toTopOf="@+id/name" />

    <ImageView
        android:id="@+id/telephone"
        android:layout_marginStart="30dp"
        android:layout_marginTop="30dp"
        android:layout_width="22dp"
        android:layout_height="22dp"
        android:src="@drawable/ic_telephone"
        app:layout_constraintStart_toStartOf="@+id/rectangle_1"
        app:layout_constraintTop_toBottomOf="@+id/name" />

    <TextView
        android:id="@+id/phone_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text=": 010-1234-5678"
        android:textColor="#000"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="@+id/telephone"
        app:layout_constraintStart_toEndOf="@+id/telephone"
        app:layout_constraintTop_toTopOf="@+id/telephone" />

    <ImageView
        android:id="@+id/gmail"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_marginTop="10dp"
        android:src="@drawable/ic_gmail"
        app:layout_constraintEnd_toEndOf="@+id/telephone"
        app:layout_constraintStart_toStartOf="@+id/telephone"
        app:layout_constraintTop_toBottomOf="@+id/telephone" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=": MIDAS@gmail.com"
        android:textColor="#000"
        android:textSize="20sp"
        android:layout_marginStart="8dp"
        app:layout_constraintBottom_toBottomOf="@+id/gmail"
        app:layout_constraintStart_toEndOf="@+id/gmail"
        app:layout_constraintTop_toTopOf="@+id/gmail"/>


</androidx.constraintlayout.widget.ConstraintLayout>