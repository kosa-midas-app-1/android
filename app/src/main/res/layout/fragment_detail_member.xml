<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_marginHorizontal="15dp"
        android:id="@+id/blackline"
        android:background="@color/black"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="80dp"
        />

    <View
        android:layout_width="390dp"
        android:layout_height="630dp"
        android:layout_marginStart="12dp"
        android:layout_marginTop="40dp"
        android:background="#D9D9D9"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/name"
    android:text="홍길동"
    android:textSize="25dp"
    app:layout_constraintTop_toTopOf="@+id/blackline"
    app:layout_constraintStart_toStartOf="@+id/blackline"
    android:layout_marginTop="15dp"
    android:layout_marginStart="50dp"
    />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/pos"
        android:text="대표이사"
        app:layout_constraintTop_toTopOf="@+id/blackline"
        app:layout_constraintStart_toStartOf="@+id/name"
        android:layout_marginTop="30dp"
        android:layout_marginStart="130dp"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/week"
        android:text="자택근무 중"
        android:textSize="25dp"
        app:layout_constraintTop_toTopOf="@+id/blackline"
        app:layout_constraintStart_toStartOf="@+id/pos"
        app:layout_goneMarginStart="100dp"
        android:layout_marginTop="15dp"
        android:layout_marginStart="230dp"
        />
<TextView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/email"
    android:text="email:glay415as@naver.com"
    android:textSize="20dp"
    app:layout_constraintTop_toTopOf="@+id/name"
    app:layout_constraintStart_toStartOf="@+id/name"
    android:layout_marginTop="40dp"
    android:layout_marginStart="60dp"
    />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/ph"
        android:text="전화번호:010-1234-5678"
        android:textSize="20dp"
        app:layout_constraintTop_toTopOf="@+id/email"
        app:layout_constraintStart_toStartOf="@+id/email"
        android:layout_marginTop="30dp"
        android:layout_marginStart="60dp"
        />
    <View
        android:layout_width="300dp"
        android:layout_height="30dp"
        android:background="#808888"
        app:layout_constraintTop_toTopOf="@+id/ph"
        app:layout_constraintStart_toStartOf="@+id/ph"
        android:layout_marginTop="40dp"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="조퇴로 상태 변경"
        android:id="@+id/sta"
        app:layout_constraintTop_toTopOf="@+id/ph"
        app:layout_constraintStart_toStartOf="@+id/ph"
        android:layout_marginTop="45dp"
        android:layout_marginHorizontal="150dp"
        />
<TextView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/to_dayTime"
    android:text="이번주 총 근로시간                   오늘 근로시간"
    app:layout_constraintTop_toTopOf="@id/sta"
    app:layout_constraintStart_toStartOf="@id/sta"
    android:layout_marginTop="150dp"
    android:layout_marginHorizontal="60dp"
    />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/to_workTime"
        android:text="평균 근로시간                            평균 출근시간"
        app:layout_constraintTop_toTopOf="@id/to_dayTime"
        app:layout_constraintStart_toStartOf="@id/to_dayTime"
        android:layout_marginTop="130dp"
        android:layout_marginHorizontal="60dp"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/cmm_time"
        app:layout_constraintTop_toTopOf="@+id/to_workTime"
        android:layout_marginHorizontal="60dp"
        android:layout_marginTop="40dp"
        android:text="출석시간: 5h 30m\n퇴근시간: X"
        android:textSize="25dp"
        />


</androidx.constraintlayout.widget.ConstraintLayout>