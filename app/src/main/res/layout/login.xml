<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="125dp"
        android:background="#808080"
        android:id="@+id/te_Login"
        android:text="Login"
        android:textSize="95dp"
        android:gravity="center"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="55dp"
        android:text="E-mail"
        android:id="@+id/te_lagin_email"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="300dp"
        />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="55dp"
        android:hint="E-mail을 입력하세요."
        android:id="@+id/in_login_email"
        app:layout_constraintTop_toTopOf="@id/te_lagin_email"
        app:layout_constraintStart_toStartOf="@id/te_lagin_email"
        android:layout_marginTop="20dp"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="55dp"
        android:text="비밀번호"
        android:id="@+id/te_lagin_pw"
        app:layout_constraintTop_toTopOf="@id/in_login_email"
        app:layout_constraintStart_toStartOf="@id/in_login_email"
        android:layout_marginTop="100dp"
        />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="55dp"
        android:hint="비밀번호를 입력하세요."
        android:id="@+id/in_login_pw"
        app:layout_constraintTop_toTopOf="@id/te_lagin_pw"
        app:layout_constraintStart_toStartOf="@id/te_lagin_pw"
        android:layout_marginTop="20dp"
        />
    <androidx.appcompat.widget.AppCompatButton
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="55dp"
        android:text="로그인"
        android:id="@+id/bt_login"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="20dp"
        />

</androidx.constraintlayout.widget.ConstraintLayout>